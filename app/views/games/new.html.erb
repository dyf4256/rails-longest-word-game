<div class="container">
  <h1>New Game</h1>
  <div class="d-flex justify-content-between mt-4" id="game">
    <% @letters.each do |letter| %>
    <div class="p-center"><p id="letter"> <%= letter %> </p></div>
    <% end %>
  </div>
  <br>
  <h6 class="mt-4 text-secondary">What is the longest word you can find?</h6>
  <form action="score" class="mt-4 d-flex" method="POST" data-turbo="false">
    <input type="text" class="flex-grow-1" name="word">
    <input type="submit" value="Play" class="btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join => params[:letters] %>
  </form>
</div>
